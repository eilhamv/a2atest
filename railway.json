{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd email-agent && pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "cd email-agent && python __main__.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}